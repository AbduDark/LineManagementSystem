<Window x:Class="LineManagementSystem.Views.ProviderGroupsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LineManagementSystem.Converters"
        mc:Ignorable="d"
        Title="{Binding Provider, StringFormat='مجموعات {0}'}"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:ProviderToLogoConverter x:Key="ProviderToLogoConverter"/>
        <local:ProviderToColorConverter x:Key="ProviderToColorConverter"/>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{Binding Provider, Converter={StaticResource ProviderToColorConverter}}"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
            </Border.Effect>
            <DockPanel>
                <Border DockPanel.Dock="Left" 
                        Background="White"
                        CornerRadius="10"
                        Padding="10"
                        Width="100"
                        Height="100"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center">
                    <Image Source="{Binding Provider, Converter={StaticResource ProviderToLogoConverter}}" 
                           Stretch="Uniform"/>
                </Border>
                <TextBlock Text="{Binding Provider, StringFormat='إدارة مجموعات {0}'}"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="20,20,20,20" Background="White" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="5" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <Button Content="+ إضافة مجموعة جديدة"
                        Style="{StaticResource ActionButton}"
                        Background="#4CAF50"
                        Command="{Binding AddGroupCommand}"/>
                <Button Content="تعديل المجموعة"
                        Style="{StaticResource ActionButton}"
                        Background="#2196F3"
                        Command="{Binding EditGroupCommand}"/>
                <Button Content="حذف المجموعة"
                        Style="{StaticResource ActionButton}"
                        Background="#F44336"
                        Command="{Binding DeleteGroupCommand}"/>
                <Button Content="تجديد الصلاحية (60 يوم)"
                        Style="{StaticResource ActionButton}"
                        Background="#FF9800"
                        Command="{Binding RenewLicenseCommand}"/>
                <Button Content="عرض التفاصيل والخطوط"
                        Style="{StaticResource ActionButton}"
                        Background="#9C27B0"
                        Command="{Binding ViewGroupDetailsCommand}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#CFD8DC"
                BorderThickness="1"
                CornerRadius="8"
                Padding="0"
                Margin="20,0,20,20">
            <DataGrid ItemsSource="{Binding Groups}"
                      SelectedItem="{Binding SelectedGroup}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      Background="Transparent"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#ECEFF1"
                      RowHeight="80"
                      HeadersVisibility="Column"
                      CanUserResizeRows="False"
                      AlternatingRowBackground="#FAFAFA"
                      KeyDown="DataGrid_KeyDown">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#37474F"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,12"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="BorderBrush" Value="#455A64"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="13"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="الشعار" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#F5F5F5" CornerRadius="5" Padding="5" HorizontalAlignment="Center">
                                    <Image Source="{Binding Provider, Converter={StaticResource ProviderToLogoConverter}}" 
                                           Width="45" Height="45" 
                                           Stretch="Uniform"
                                           ToolTip="{Binding Provider}"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="نوع" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#FFF3E0" CornerRadius="5" Padding="3" HorizontalAlignment="Center"
                                        Visibility="{Binding IsBusinessGroup, Converter={StaticResource BoolToVis}}">
                                    <Image Source="/Resources/Images/business_group.jpg" 
                                           Width="35" Height="35" 
                                           Stretch="Uniform"
                                           ToolTip="مجموعة بيزنس"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="اسم المجموعة" Binding="{Binding Name}" Width="*" FontSize="14">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="100" FontSize="13">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#546E7A"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="عدد الخطوط" Binding="{Binding GetLineCount}" Width="90" FontSize="14">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="محفظة كاش" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#E8F5E9" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding RequiresCashWallet}" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"
                                               Foreground="#2E7D32"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="آخر تجديد" Binding="{Binding LastRenewedOn, StringFormat='yyyy-MM-dd'}" Width="110" FontSize="12">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="التجديد القادم" Binding="{Binding NextRenewalDue, StringFormat='yyyy-MM-dd'}" Width="110" FontSize="12">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#FF6F00"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="الأيام المتبقية" Binding="{Binding GetRemainingDaysForRenewal}" Width="100" FontSize="13">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#D32F2F"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="الموظف المسؤول" Binding="{Binding AssignedToEmployee}" Width="120" FontSize="13">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#424242"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="العميل" Binding="{Binding AssignedCustomer}" Width="120" FontSize="13">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#424242"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="موعد التسليم" Binding="{Binding ExpectedHandoverDate, StringFormat='yyyy-MM-dd'}" Width="110" FontSize="12">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#6A1B9A"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="تم التسليم" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsHandedOver, Mode=OneWay}" 
                                          IsEnabled="False" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="التفاصيل الإضافية" Binding="{Binding AdditionalDetails}" Width="250" FontSize="12">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="Foreground" Value="#424242"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="ToolTip" Value="{Binding AdditionalDetails}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
