<Window x:Class="LineManagementSystem.Views.GroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="إضافة/تعديل مجموعة"
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        Background="{DynamicResource WindowBackground}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="بيانات المجموعة"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="{DynamicResource TextPrimary}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="اسم المجموعة" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <TextBox x:Name="txtGroupName"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"
                             Foreground="#2196F3"
                             FontWeight="SemiBold"
                             Background="{DynamicResource InputBackground}"
                             BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="حالة المجموعة" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <ComboBox x:Name="cmbStatus"
                              Padding="10"
                              FontSize="14"
                              Margin="0,0,0,15"
                              Foreground="#FFC107"
                              FontWeight="SemiBold"
                              Background="{DynamicResource InputBackground}"
                              BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>

                <CheckBox x:Name="chkRequiresCashWallet"
                          Content="تتطلب محفظة كاش (تجديد كل 60 يوم)"
                          FontWeight="Bold"
                          Margin="0,0,0,15"
                          Checked="ChkRequiresCashWallet_Changed"
                          Unchecked="ChkRequiresCashWallet_Changed"
                          Foreground="{DynamicResource TextPrimary}"/>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock x:Name="lblLastRenewed" Text="آخر تجديد" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <DatePicker x:Name="dtpLastRenewed"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"
                                Foreground="#2196F3"
                                FontWeight="SemiBold"
                                Background="{DynamicResource InputBackground}"
                                BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>
                
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="التجديد التالي" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <DatePicker x:Name="dpNextRenewal"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"
                                Foreground="#2196F3"
                                FontWeight="SemiBold"
                                Background="{DynamicResource InputBackground}"
                                BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="الموظف المسؤول (اختياري)" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <TextBox x:Name="txtEmployee"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"
                             Foreground="#2196F3"
                             FontWeight="SemiBold"
                             Background="{DynamicResource InputBackground}"
                             BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="العميل المُسلم له (اختياري)" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <TextBox x:Name="txtCustomer"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"
                             Foreground="#2196F3"
                             FontWeight="SemiBold"
                             Background="{DynamicResource InputBackground}"
                             BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="موعد التسليم المتوقع (اختياري)" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <DatePicker x:Name="dtpHandoverDate"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"
                                Foreground="#FF9800"
                                FontWeight="SemiBold"
                                Background="{DynamicResource InputBackground}"
                                BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>

                <CheckBox x:Name="chkIsHandedOver"
                          Content="تم التسليم بالفعل"
                          FontWeight="Bold"
                          Margin="0,0,0,15"
                          Foreground="{DynamicResource TextPrimary}"/>

                <CheckBox x:Name="chkIsBusinessGroup"
                          Content="مجموعة بيزنس (Business Group)"
                          FontWeight="Bold"
                          Margin="0,0,0,15"
                          Foreground="{DynamicResource TextPrimary}"/>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="تفاصيل إضافية (اختياري)" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimary}"/>
                    <TextBox x:Name="txtAdditionalDetails"
                             Padding="10"
                             FontSize="14"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="{DynamicResource InputBackground}"
                             Foreground="{DynamicResource TextPrimary}"
                             BorderBrush="{DynamicResource InputBorder}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
            <Button Content="حفظ"
                    Width="100"
                    Padding="10"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Click="BtnSave_Click"/>
            <Button Content="إلغاء"
                    Width="100"
                    Padding="10"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>